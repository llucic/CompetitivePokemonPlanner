<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Team Name"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_below="@id/txt_team_name">
        <ImageView
            android:id="@+id/img_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poke_ball"/>
        <ImageView
            android:id="@+id/img_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poke_ball_gray" />
        <ImageView
            android:id="@+id/img_team3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poke_ball_gray" />
        <ImageView
            android:id="@+id/img_team4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poke_ball_gray" />
        <ImageView
            android:id="@+id/img_team5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poke_ball_gray" />
        <ImageView
            android:id="@+id/img_team6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poke_ball_gray" />
        </LinearLayout>
    <ImageButton
        android:id="@+id/btn_delete_team_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_delete"/>
    <ImageButton
        android:id="@+id/btn_edit_team_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_delete_team_pokemon"
        android:src="@android:drawable/ic_menu_edit"/>
</RelativeLayout>